# Database Configuration
# PostgreSQL - Full connection URL including credentials
# Format: postgresql://user:password@host:port
POSTGRES_CONNECTION_URL=postgresql://mimo:your_postgres_password_here@localhost:5432
POSTGRES_DB_NAME=mimo_db

# MongoDB - Full connection URI including credentials
# Format: mongodb://user:password@host:port or mongodb+srv://...
MONGODB_CONNECTION_URI=mongodb://mimo:your_mongo_password_here@localhost:27017
MONGODB_DB_NAME=mimo_db

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5050

# Environment (development, dev, production, prod)
# Affects CORS, Cookie security settings
ENVIRONMENT=development

# Allowed CORS Origins (comma-separated)
# Required in production environment
# Example: https://app.example.com,https://www.example.com
ALLOWED_ORIGINS=https://api.mimo.shuta.me,https://mimo.shuta.me

# Logging
LOG_LEVEL=info

# JWT Configuration
# Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Email/SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Mimo Server

# AI Features (Optional)
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Note: For local development, you can use Config.toml instead of environment variables
